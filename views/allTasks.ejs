<%- include('./includes/head')  %>

<%- include('./includes/nav')  %>

<div class="row">
  <% if(tasks.length === 0){ %>
  <p>no tasks</p>
  <% }else{ %>
  <ul class="list-group">
    <% tasks.map((item)=>{ %>
    <li class="list-group-item"><%= item.title %>
      <div class="mt-3">        
        <a class="btn btn-primary" href="/editTask/<%= item._id %>">Edit</a>
        <a class="btn btn-primary" href="/cancelTask/<%= item._id %>">Cancel</a>
      </div>
    </li>
    <%  }) %>
  </ul>

  <% } %>
</div>
<%- include('./includes/footer')  %>